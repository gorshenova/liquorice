<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_bright">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RoundedImageView with a squared picture. The attribute oval transforms  the squared image in the circular image." />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_rounded_squared_pic"
            android:layout_width="@dimen/dimen_50"
            android:layout_height="@dimen/dimen_50"
            app:riv_border_color="@color/colorAccent"
            app:riv_border_width="@dimen/dimen_2"
            app:riv_oval="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RoundedImageView with a rectangular picture. The attribute oval transforms the squared image in the oval image." />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_rounded_rectangular_pic"
            android:layout_width="@dimen/dimen_50"
            android:layout_height="@dimen/dimen_50"
            app:riv_border_color="@color/colorAccent"
            app:riv_border_width="@dimen/dimen_2"
            app:riv_oval="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RoundedImageView with a place holder using library to load image by URL." />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_rounded_placeholder_pic"
            android:layout_width="@dimen/dimen_50"
            android:layout_height="@dimen/dimen_50"
            app:riv_border_color="@color/colorAccent"
            app:riv_border_width="@dimen/dimen_1"
            app:riv_oval="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:background="@color/colorAccent" />
    </LinearLayout>

</ScrollView>