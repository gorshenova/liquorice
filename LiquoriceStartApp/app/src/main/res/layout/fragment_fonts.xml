<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.liquorice.app.android.ui.views.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello World!"
                android:textSize="18sp"
                app:textFont="Lanehum" />

            <com.liquorice.app.android.ui.views.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello World!"
                android:textSize="18sp"
                app:textFont="OrangeJuice" />

            <com.liquorice.app.android.ui.views.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello World!"
                android:textSize="18sp"
                app:textFont="OrmontLight" />

            <com.liquorice.app.android.ui.views.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello World!"
                android:textSize="18sp"
                app:textFont="WedgieRegular" />

            <com.liquorice.app.android.ui.views.FontEditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello World!"
                app:textFont="Lanehum" />

            <com.liquorice.app.android.ui.views.FontEditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello World!"
                app:textFont="OrangeJuice" />

            <com.liquorice.app.android.ui.views.FontEditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello World!"
                app:textFont="OrmontLight" />

            <com.liquorice.app.android.ui.views.FontEditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello World!"
                app:textFont="WedgieRegular" />

        </LinearLayout>

        <Button
            android:id="@+id/btnFontOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Click Me Change Font" />

        <Button
            android:id="@+id/btnFontTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Click Me Change Font" />

        <Button
            android:id="@+id/btnFontThree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Click Me Change Font" />

        <Button
            android:id="@+id/btnFontFour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Click Me Change Font" />
    </LinearLayout>

</ScrollView>
